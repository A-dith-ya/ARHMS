<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DashboardActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userMetrics"
        style="@style/DashboardTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_metric"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/settings"
        style="@style/DashboardTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/heartRateMonitor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/heart_rate_monitor"
        style="@style/DashboardTextViewStyle"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/temperatureMonitor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/temperature_monitor"
        style="@style/DashboardTextViewStyle"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification"
        style="@style/DashboardTextViewStyle"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="141dp" />
</LinearLayout>